<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bf_megamenu" resource="default" engine="innodb"
           comment="Boolfly mega menu table">
        <column xsi:type="int" name="menu_id" padding="11" nullable="false" unsigned="false" identity="true"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Title"/>
        <column xsi:type="varchar" name="identifier" nullable="true" length="255" comment="Identifier"/>
        <column xsi:type="varchar" name="additional_class" nullable="true" length="100" comment="Additional Class"/>
        <column xsi:type="smallint" name="scroll_fixed" padding="6" nullable="true" comment="Scroll To Fixed"/>
        <column xsi:type="varchar" name="desktop_template" nullable="true" length="100" comment="Desktop Template"/>
        <column xsi:type="smallint" name="status" nullable="false" padding="6" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="menu_id"/>
        </constraint>
        <index referenceId="BOOLFLY_MEGA_MENU_MENU_ID" indexType="btree">
            <column name="menu_id"/>
        </index>
        <index referenceId="BOOLFLY_MEGA_MENU_IDENTIFIER_FIELD" indexType="btree">
            <column name="identifier"/>
        </index>
        <index referenceId="BF_MEGAMENU_79B209645FB0D568E4FBA1CC62512ACB" indexType="fulltext">
            <column name="title"/>
            <column name="identifier"/>
        </index>
    </table>
    <table name="bf_megamenu_store" resource="default" engine="innodb"
           comment="Boolfly mega menu store table">
        <column xsi:type="int" name="menu_id" padding="11" nullable="false" unsigned="false" identity="false"
                comment="Menu ID"/>
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false"
                comment="Store ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="menu_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="CSTR_BOOLFLY_MEGA_MENU_STORE_MENU_ID_TO_MENU_ID"
                    table="bf_megamenu_store" column="menu_id"
                    referenceTable="bf_megamenu"
                    referenceColumn="menu_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign"
                    referenceId="CSTR_BOOLFLY_MEGA_MENU_STORE_STORE_ID_TO_STORE_ID"
                    table="bf_megamenu_store" column="store_id"
                    referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <index referenceId="BOOLFLY_MEGA_MENU_STORE_MENU_ID" indexType="btree">
            <column name="menu_id"/>
        </index>
        <index referenceId="BOOLFLY_MEGA_MENU_STORE_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
    <table name="bf_megamenu_item" resource="default" engine="innodb"
           comment="Boolfly Mega Menu item table">
        <column xsi:type="int" name="item_id" padding="11" nullable="false" unsigned="false" identity="true"
                comment="Item Id"/>
        <column xsi:type="int" name="menu_id" padding="11" nullable="false" identity="false"
                comment="Menu Id"/>
        <column xsi:type="varchar" name="record_id" nullable="false" length="50" comment="Record Id"/>
        <column xsi:type="varchar" name="parent_id" nullable="true" length="50" comment="Parent Id"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Title"/>
        <column xsi:type="varchar" name="additional_class" nullable="true" length="100" comment="Additional Class"/>
        <column xsi:type="varchar" name="link_type" nullable="true" length="100" comment="Link Type"/>
        <column xsi:type="varchar" name="custom_link" nullable="true" length="255" comment="Custom Link"/>
        <column xsi:type="int" name="category_id" nullable="true" padding="11" comment="Category Id"/>
        <column xsi:type="int" name="cms_page_id" nullable="true" padding="11" comment="CMS Page Id"/>
        <column xsi:type="smallint" name="level" nullable="false" default="1" padding="5" comment="Level"/>
        <column xsi:type="smallint" name="position" nullable="false" padding="5" comment="Position"/>
        <column xsi:type="varchar" name="link_target" nullable="true" length="100" comment="Link Target"/>
        <column xsi:type="smallint" name="status" nullable="false" padding="6" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BOOLFLY_MEGA_MENU_ITEM_RECORD_ID">
            <column name="record_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="CSTR_BOOLFLY_MEGA_MENU_ITEM_MENU_ID_TO_ENTITY_ID"
                    table="bf_megamenu_item" column="menu_id"
                    referenceTable="bf_megamenu"
                    referenceColumn="menu_id" onDelete="CASCADE"/>
        <index referenceId="BOOLFLY_MEGA_MENU_ITEM_ITEM_ID" indexType="btree">
            <column name="item_id"/>
        </index>
        <index referenceId="BOOLFLY_MEGA_MENU_ITEM_MENU_ID" indexType="btree">
            <column name="menu_id"/>
        </index>
    </table>
    <table name="bf_megamenu_item_content" resource="default" engine="innodb"
           comment="Boolfly Mega Menu Item Content table">
        <column xsi:type="int" name="item_id" padding="11" nullable="false" identity="false"
                comment="Item Id"/>
        <column xsi:type="smallint" name="type_id" padding="6" nullable="false" identity="false"
                comment="Type"/>
        <column xsi:type="varchar" name="width" nullable="true" length="10" comment="Width"/>
        <column xsi:type="varchar" name="content_type" nullable="true" length="100" comment="Content Type"/>
        <column xsi:type="mediumtext" name="content" nullable="true" comment="Content"/>
        <column xsi:type="smallint" name="child_columns" nullable="true" padding="6" comment="Child Columns"/>
        <column xsi:type="int" name="category_id" nullable="true" padding="11" comment="Category ID"/>
        <column xsi:type="smallint" name="status" nullable="false" padding="6" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="true" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
            <column name="type_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="CSTR_BOOLFLY_MEGA_MENU_ITEM_CONTENT_ITEM_ID_TO_ITEM_ID"
                    table="bf_megamenu_item_content" column="item_id"
                    referenceTable="bf_megamenu_item"
                    referenceColumn="item_id" onDelete="CASCADE"/>
    </table>
</schema>
