<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bf_megamenu_listing.bf_megamenu_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>megamenu_columns</spinner>
        <deps>
            <dep>bf_megamenu_listing.bf_megamenu_listing_data_source</dep>
        </deps>
        <buttons>
            <button name="add">
                <label>Add New</label>
                <class>primary</class>
                <url path="*/*/new"/>
            </button>
        </buttons>
    </settings>
    <dataSource name="bf_megamenu_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Boolfly_Megamenu::menu</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="bf_megamenu_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>menu_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
            <filterSelect name="store_id" provider="${ $.parentName }">
                <settings>
                    <captionValue>0</captionValue>
                    <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                    <imports>
                        <link name="visible">componentType = column, index = ${ $.index }:visible</link>
                    </imports>
                </settings>
            </filterSelect>
        </filters>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="*/*/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="status">
                <settings>
                    <type>status</type>
                    <label translate="true">Change Status</label>
                    <actions>
                        <action name="0">
                            <type>enable</type>
                            <label translate="true">Enable</label>
                            <url path="*/*/massStatus">
                                <param name="status">1</param>
                            </url>
                        </action>
                        <action name="1">
                            <type>disable</type>
                            <label translate="true">Disable</label>
                            <url path="*/*/massStatus">
                                <param name="status">0</param>
                            </url>
                        </action>
                    </actions>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="megamenu_columns">
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>menu_id</indexField>
                <preserveSelectionsOnFilter>true</preserveSelectionsOnFilter>
            </settings>
        </selectionsColumn>
        <column name="menu_id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="title" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="identifier" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Identifier</label>
            </settings>
        </column>
        <column name="store_id" class="Magento\Store\Ui\Component\Listing\Column\Store" sortOrder="45">
            <settings>
                <label translate="true">Store View</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="desktop_template" component="Magento_Ui/js/grid/columns/select" sortOrder="50">
            <settings>
                <options class="Boolfly\Megamenu\Model\Source\DesktopTemplate"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Desktop Template</label>
            </settings>
        </column>
        <column name="scroll_fixed" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Scroll To Fixed</label>
            </settings>
        </column>
        <column name="created_at" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="updated_at" sortOrder="90">
            <settings>
                <filter>text</filter>
                <label translate="true">Updated At</label>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select" sortOrder="150">
            <settings>
                <options class="Boolfly\Megamenu\Model\Source\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Boolfly\Megamenu\Ui\Component\Listing\Columns\EditActions" sortOrder="400">
            <settings>
                <indexField>menu_id</indexField>
                <options>
                    <option name="routePath" xsi:type="string">megamenu/menu/edit</option>
                </options>
            </settings>
        </actionsColumn>
    </columns>
</listing>
