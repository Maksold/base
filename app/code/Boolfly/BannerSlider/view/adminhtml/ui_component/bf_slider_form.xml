<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bf_slider_form.bf_slider_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Slider Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="reverseMetadataMerge" xsi:type="boolean">true</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Boolfly\BannerSlider\Block\Adminhtml\Edit\BackButton"/>
            <button name="save" class="Boolfly\BannerSlider\Block\Adminhtml\Edit\SaveButton"/>
            <button name="delete" class="Boolfly\BannerSlider\Block\Adminhtml\Edit\DeleteButton"/>
            <button name="save_and_continue" class="Boolfly\BannerSlider\Block\Adminhtml\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>bf_slider_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>bf_slider_form.bf_slider_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="bf_slider_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <validateUrl path="bannerslider/slider/validate"/>
            <submitUrl path="bannerslider/slider/save"/>
        </settings>
        <dataProvider class="Boolfly\BannerSlider\Model\Slider\DataProvider" name="bf_slider_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="5">
        <settings>
            <collapsible>false</collapsible>
            <label/>
        </settings>
        <field name="id" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bf_slider</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bf_slider</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="title" sortOrder="30" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>
        <field name="display_title" sortOrder="40" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bf_slider</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Display Title</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="animation_effect" sortOrder="70" formElement="select">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Animation Effect</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Boolfly\BannerSlider\Model\Source\Effect"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="auto_play" sortOrder="80" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bf_slider</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Auto Play</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="speed" sortOrder="80" formElement="input">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Speed</label>
            </settings>
        </field>
        <field name="cms_page_ids" sortOrder="100" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">bf_slider</item>
                    <item name="default" xsi:type="array"/>
                </item>
            </argument>
            <settings>
                <label translate="true">Cms Page Ids</label>
                <dataType>text</dataType>
                <dataScope>cms_page_ids</dataScope>
                <imports>
                    <link name="value">ns = cms_page_listing, index = ids:selected</link>
                </imports>
                <exports>
                    <link name="value">ns = cms_page_listing, index = ids:selected</link>
                </exports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="banners">
        <settings>
            <label translate="true">Banners</label>
            <collapsible>true</collapsible>
            <opened>false</opened>
            <dataScope>banners</dataScope>
        </settings>
        <button name="assign_banner_button" template="ui/form/components/button/container">
            <settings>
                <title translate="true">Assign Banners</title>
                <dataScope />
            </settings>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">bf_slider_form.bf_slider_form.banners.assign_banner_modal</item>
                            <item name="actionName" xsi:type="string">toggleModal</item>
                        </item>
                    </item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
        </button>
        <dynamicRows name="assigned_banners" component="Magento_Ui/js/dynamic-rows/dynamic-rows-grid" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="js_config" xsi:type="array">
                    <item name="dataProvider" xsi:type="string">data.banners.assign_banner_grid</item>
                    <item name="map" xsi:type="array">
                        <item name="banner_id" xsi:type="string">banner_id</item>
                        <item name="title" xsi:type="string">title</item>
                        <item name="image_desktop" xsi:type="string">image_desktop_src</item>
                        <item name="banner_link" xsi:type="string">image_desktop_link</item>
                    </item>
                    <item name="identificationDRProperty" xsi:type="string">banner_id</item>
                </item>
            </argument>
            <settings>
                <defaultRecord>false</defaultRecord>
                <addButton>false</addButton>
                <deleteProperty>true</deleteProperty>
                <recordTemplate>record</recordTemplate>
                <identificationProperty>banner_id</identificationProperty>
                <links>
                    <link name="insertData">${ $.provider }:${ $.dataProvider }</link>
                </links>
                <dndConfig>
                    <param name="enabled" xsi:type="boolean">true</param>
                    <param name="template" xsi:type="string">ui/dynamic-rows/cells/dnd</param>
                </dndConfig>
                <columnsHeader>true</columnsHeader>
            </settings>
            <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="isTemplate" xsi:type="boolean">true</item>
                        <item name="is_collection" xsi:type="boolean">true</item>
                        <item name="dataScope" xsi:type="string" />
                        <item name="positionProvider" xsi:type="string">priority</item>
                    </item>
                </argument>
                <field name="banner_id" formElement="input" sortOrder="10">
                    <settings>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                        <dataType>text</dataType>
                        <dataScope>banner_id</dataScope>
                        <label translate="true">ID</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="title" formElement="input" sortOrder="20">
                    <settings>
                        <elementTmpl>ui/dynamic-rows/cells/text</elementTmpl>
                        <label translate="true">Title</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="priority" formElement="input" sortOrder="25">
                    <settings>
                        <elementTmpl>ui/form/element/input</elementTmpl>
                        <dataType>number</dataType>
                        <dataScope>priority</dataScope>
                        <label translate="true">Priority</label>
                        <visible>false</visible>
                    </settings>
                </field>
                <field name="image_desktop" formElement="input" sortOrder="30">
                    <settings>
                        <elementTmpl>ui/dynamic-rows/cells/thumbnail</elementTmpl>
                        <label translate="true">Image Desktop</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <field name="banner_link" formElement="input" sortOrder="300">
                    <settings>
                        <elementTmpl>Boolfly_BannerSlider/grid/cells/link</elementTmpl>
                        <label translate="true">Action</label>
                        <labelVisible>false</labelVisible>
                    </settings>
                </field>
                <actionDelete name="actionDelete" sortOrder="400">
                    <argument name="data" xsi:type="array" />
                    <settings>
                        <label translate="true">Unassign</label>
                        <dataType>text</dataType>
                        <componentType>actionDelete</componentType>
                    </settings>
                </actionDelete>
            </container>
        </dynamicRows>
        <modal name="assign_banner_modal">
            <settings>
                <options>
                    <option name="title" xsi:type="string" translate="true">Assign Banners</option>
                    <option name="buttons" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="text" xsi:type="string">Cancel</item>
                            <item name="class" xsi:type="string">action-secondary</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="targetName" xsi:type="string">${ $.name }</item>
                                    <item name="actionName" xsi:type="string">actionCancel</item>
                                </item>
                            </item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="text" xsi:type="string" translate="true">Done</item>
                            <item name="class" xsi:type="string">action-primary</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="targetName" xsi:type="string">index = assign_banner_grid</item>
                                    <item name="actionName" xsi:type="string">save</item>
                                </item>
                                <item name="1" xsi:type="array">
                                    <item name="targetName" xsi:type="string">${ $.name }</item>
                                    <item name="actionName" xsi:type="string">actionDone</item>
                                </item>
                            </item>
                        </item>
                    </option>
                </options>
            </settings>
            <insertListing name="assign_banner_grid">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="cssclass" xsi:type="string">noclass</item>
                    </item>
                </argument>
                <settings>
                    <autoRender>true</autoRender>
                    <dataScope>assign_banner_grid</dataScope>
                    <ns>bf_banner_listing</ns>
                    <externalProvider>bf_banner_listing.bf_banner_listing_data_source</externalProvider>
                    <selectionsProvider>bf_banner_listing.bf_banner_listing.banner_columns.ids</selectionsProvider>
                    <dataLinks>
                        <imports>false</imports>
                        <exports>true</exports>
                    </dataLinks>
                    <externalFilterMode>true</externalFilterMode>
                </settings>
            </insertListing>
        </modal>
    </fieldset>
    <fieldset name="cms_pages">
        <settings>
            <label translate="true">CMS Page</label>
            <collapsible>true</collapsible>
            <opened>false</opened>
            <dataScope>cms_pages</dataScope>
        </settings>
        <insertListing name="assign_cms_grid">
            <settings>
                <autoRender>true</autoRender>
                <dataScope>cms_page_grid</dataScope>
                <ns>cms_page_listing</ns>
                <externalProvider>cms_page_listing.cms_page_listing</externalProvider>
                <selectionsProvider>cms_page_listing.cms_page_listing.cms_page_columns.ids</selectionsProvider>
                <dataLinks>
                    <imports>false</imports>
                    <exports>true</exports>
                </dataLinks>
                <externalFilterMode>true</externalFilterMode>
            </settings>
        </insertListing>
    </fieldset>
</form>
